@using Perchero.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Iniciar sesión";
}
<div class="panel signin">
    <div class="panel-heading">
        <h1>@ViewBag.Title</h1>
        <h4 class="panel-title">Bienvenido! Por favor @ViewBag.Title.</h4>
    </div>
    <div class="panel-body">
        @*<button class="btn btn-primary btn-quirk btn-fb btn-block">Connect with Facebook</button>*@
        @*<div class="or">or</div>*@
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group mb10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group nomargin">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group nomargin">
                <div class="input-group">
                    <div class="">
                        <br />
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>
            <div><a href="@Url.Action("ForgotPassword","Account")" class="forgot">Olvidaste la contraseña?</a></div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-quirk btn-block">INICIAR SESION</button>
            </div>
        }
        <hr class="invisible">
        <div class="form-group">
            <a href="@Url.Action("Register","Account")" class="btn btn-default btn-quirk btn-stroke btn-stroke-thin btn-block btn-sign">Registrarse!</a>
        </div>
    </div>
</div>
<!-- panel -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
