@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
   
    <li>
        <div class="btn-group">
            <button type="button" class="btn btn-logged" data-toggle="dropdown">
                <img src="http://localhost:5900/images/photos/me.png" alt="" />
                @User.Identity.GetUserName()
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu pull-right">
                <li><a href=""><i class="glyphicon glyphicon-user"></i> Mi Perfil</a></li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="glyphicon glyphicon-log-out"></i> Cerrar sesión</a></li>
            </ul>
        </div>
    </li>
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "hidden" }))
    {
        @Html.AntiForgeryToken()
    }
}
