@model IEnumerable<Perchero.Models.RoleDTO>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="contentpanel">

    <ol class="breadcrumb breadcrumb-quirk">
        <li>
            <a href="@Url.Action("Index","Home")"><i class="fa fa-home mr5"></i>Inicio</a>
        </li>
        <li><a href="@Url.Action("Index","Admin")">Usuario</a></li>
        <li class="active">Roles</li>
    </ol>

    <div class="panel">
        <div class="panel-heading">
            <h4 class="panel-title">
                Roles
                <a class="btn btn-primary btn-quirk btn-stroke btn-xs" href="@Url.Action("AddRole", "Admin")"><i class="glyphicon glyphicon-plus"></i></a>
                <a class="btn btn-default btn-quirk btn-stroke btn-xs" href="@Url.Action("Index", "Admin")"><i class="glyphicon glyphicon-arrow-left"></i></a>
            </h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div class="panel-body">
            <div class="table-responsive">

                <div class="content-page">
                    <div class="content">

                        <table id="dataTable1" class="table table-bordered table-striped-col">
                            <tr>
                                <th>
                                    Roles
                                </th>
                                <th>Opciones</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoleName)
                                    </td>
                                    <td>
                                        @if (item.RoleName.ToLower() != "administrador")
                                        {
                                            <a class="btn btn-warning btn-quirk btn-fill btn-xs" href="@Url.Action("EditRoles", "Admin",
                   new { RoleName = item.RoleName })"><i class="glyphicon glyphicon-pencil"></i></a>
                                        }
                                        @if (item.RoleName.ToLower() != "administrador")
                                        {
                                            <a class="btn btn-danger btn-quirk btn-fill btn-xs" href="@Url.Action("DeleteUserRole", "Admin",
                   new { RoleName = item.RoleName })"><i class="glyphicon glyphicon-trash"></i></a>
                                           
                                        }
                                    </td>

                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


