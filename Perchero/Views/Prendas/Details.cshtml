@model Perchero.Models.Prenda

@{
    ViewBag.Title = "Detalles";
}
<div class="contentpanel">

    <ol class="breadcrumb breadcrumb-quirk">
        <li>
            <a href="@Url.Action("Index","Home")"><i class="fa fa-home mr5"></i> Inicio</a>
        </li>
        <li><a href="@Url.Action("Index","Prendas")">Prendas</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
    <div class="panel panel-primary panel-profile list-view">
        <div class="panel-heading">
            <div class="media">
                <div class="media-body">
                    <h4 class="media-heading" style="color: white;">
                        @ViewBag.Title
                        <div class="pull-right">
                            @if (User.IsInRole("Diseñador"))
                            {
                                @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning btn-xs" })
                                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-default btn-xs" })
                            }
                            @if (User.IsInRole("Cliente"))
                            {
                                @Html.ActionLink("Volver", "Galeria", null, new { @class = "btn btn-default btn-xs" })
                            }
                        </div>
                    </h4>
                    <p class="media-usermeta"><i class="glyphicon glyphicon-briefcase"></i> Prenda</p>
                </div>
            </div><!-- media -->
        </div><!-- panel-heading -->

        <div class="panel-body people-info">
            <div class="row">
                <div class="col-md-12">

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs nav-primary">
                        <li class="active">
                            <a href="#popular5" data-toggle="tab"><strong>@Html.DisplayFor(model => model.Nombre)</strong></a>
                        </li>
                        <li>
                            @*<a href="#recent5" data-toggle="tab"><strong>@Html.DisplayNameFor(model => model.Talle) @Html.DisplayFor(model => model.Talle)</strong></a>*@
                        </li>
                        <li>
                            <a href="#comments5" data-toggle="tab"><strong>Comments</strong></a>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content mb20">
                        <div class="tab-pane active" id="popular5">
                            <div class="col-lg-12">
                                <div class="col-sm-3">
                                    <img class="img-frame" width="200" height="280" src="@Url.Content("~/Content/imgprenda/imgprev/"+Model.Imagen+"/"+Model.Imagen+".png")" />
                                </div>
                                <div class="info-group">
                                    <div class="col-sm-3">
                                        <label>Diseñador</label>
                                        @Html.DisplayFor(model => model.Usuario.Nombre)
                                    </div>
                                    <div class="col-sm-3">

                                        <label>@Html.DisplayNameFor(model => model.Tipo.Categoria)</label>
                                        @Html.DisplayFor(model => model.Tipo.Categoria)
                                    </div>
                                    <div class="col-sm-3">

                                        <label>@Html.DisplayNameFor(model => model.PrecioTotal)</label>
                                        @Html.DisplayFor(model => model.PrecioTotal)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="recent5">
                            <div class="info-group">
                                @*<label>@Html.DisplayNameFor(model => model.Talle)</label>
                                    @Html.DisplayFor(model => model.Talle)*@
                                @Html.ActionLink("Details", "Details", new { id = Model })
                            </div>
                        </div>
                        <div class="tab-pane" id="comments5">
                            Temporibus autem quibusdam et aut officiis debitis aut rerum necessitatibus saepe eveniet ut et voluptates repudiandae sint et molestiae non recusandae.
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-heading">
            <div class="media">
                <div class="media-body">
                    <h4 class="media-heading" style="color: white;">
                        @ViewBag.Title
                    </h4>
                    <p class="media-usermeta"><i class="glyphicon glyphicon-list"></i> Accesorios</p>
                </div>
            </div><!-- media -->
        </div><!-- panel-heading -->
        <div class="panel-body people-info">
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped-col">
                        <thead>
                            <tr>
                                <th>Tela</th>
                                <th>Metro</th>
                                <th>Avio</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model.DetallePrendas)
                                {
                                    <tr>
                                        @{
                                    if (item.TelaId != null)
                                    {
                                        <td>@item.Tela.Nombre</td>
                                            <td>@item.MetroTela</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                            <td></td>
                                    }
                                        }
                                        @{
                                    if (item.AvioId != null)
                                    {
                                        <td>@item.Avio.Nombre</td>
                                            <td>@item.CantidadAvio</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                            <td></td>
                                    }
                                        }
                                        
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div><!-- row -->
        </div>
    </div><!-- panel -->
</div>
