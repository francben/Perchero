@model IEnumerable<Perchero.Models.Prenda>

@{
    ViewBag.Title = "Galeria";
}

<div class="content-page">
    <div class="content">
        <div class="box-info animated fadeInDown">
            <div class="widget text-white-1" style="background-color:#414141;">
                <div class="widget-header">
                    <h2>
                        <strong class="text-white-1"><i class='fa fa-th-large'></i>  Galeria de Prendas</strong>
                    </h2>
                    <div class="additional-btn">
                        <a href="#" class="hidden reload"><i class="icon-ccw-1"></i></a>
                        <a href="#" class="widget-toggle"><i class="icon-down-open-2"></i></a>
                        <a href="#" class="widget-close"><i class="icon-cancel-3"></i></a>
                    </div>
                </div>
                <div class="widget-content padding">

                    <div class="gallery-wrap">
                        @foreach (var item in Model)
                        {
                            <div class="column">
                                <div class="inner">
                                    @if (User.IsInRole("Cliente"))
                                    {

                                    }
                                    <p class="row">
                                        <a href="@Url.Action("Pedido", "Pedidos", new {PrendaId = item.Id})" class="btn btn-darkblue-2 btn-block">Seleccionar</a>
                                    </p>
                                    <a class="zooming" href="@Url.Content("~/Content/imgprenda/imgori/" + item.Imagen + "/" + item.Imagen + ".png")" title="@item.Nombre">

                                        <div class="img-wrap">
                                            <img src="@Url.Content("~/Content/imgprenda/imgprev/" + item.Imagen + "/" + item.Imagen + ".png")" alt="@item.Nombre" title="@item.Nombre" class="mfp-fade">
                                        </div>
                                        <div class="caption-hover">
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                            <br />
                                            @Html.DisplayFor(modelItem => item.Usuario.Nombre)
                                            <br />
                                            @Html.DisplayFor(modelItem => item.PrecioTotal) Gs.
                                            <br />
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
