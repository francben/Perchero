@model Perchero.Models.IndexViewModel
@{
    ViewBag.Title = "Mi Perfil";
}

<div class="contentpanel">

    <ol class="breadcrumb breadcrumb-quirk">
        <li>
            <a href="@Url.Action("Index","Home")"><i class="fa fa-home mr5"></i> Inicio</a>
        </li>
        <li class="active"> Mi Perfil</li>
    </ol>
    <div class="panel panel-primary panel-profile list-view">
        <div class="panel-heading">
            <div class="media">
                <div class="media-body">
                    <h4 class="media-heading" style="color: white;">
                        <i class="glyphicon glyphicon-user"></i> @ViewBag.Title
                        <div class="pull-right">
                            @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning btn-xs" })
                            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-default btn-xs" })
                        </div>
                    </h4>
                </div>
            </div><!-- media -->
        </div><!-- panel-heading -->

        <p class="text-success">@ViewBag.StatusMessage</p>
        <div class="container">
            <div class="login-wrap animated flipInX col-md-3">
                <div class="media">
                    <div class="media-left">
                        <a href="#">
                            <img class="media-object img-circle" src="~/images/default-user.png" alt="">
                        </a>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading">@Model.Nombre @Model.Apellido</h4>
                        <p class="media-usermeta"><i class="fa fa-group"></i> Cliente</p>
                    </div>
                </div><!-- media -->
                </div>
                <div class="panel-body people-info">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="info-group">
                                <label>Direccion</label>
                                @Model.Direccion
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="info-group">
                                <label>Correo</label>
                                @Model.Email
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="info-group">
                                <label>Contraseña</label>
                                <h4>
                                    @if (Model.HasPassword)
                                    {
                                        @Html.ActionLink("Cambiar la contraseña", "ChangePassword")
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Crear", "SetPassword")
                                    }
                            </h4>
                        </div>
                    </div>
                    </div><!-- row -->
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="info-group">
                                <label>Telefono</label>
                                @Model.Telefono
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="info-group">
                                <label>Following</label>
                                <h4>232</h4>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="info-group">
                                <label>Social</label>
                                <div class="social-account-list">
                                    <i class="fa fa-facebook-official"></i>
                                    <i class="fa fa-twitter"></i>
                                    <i class="fa fa-skype"></i>
                                </div>
                            </div>
                        </div>
                    </div><!-- row -->
                </div>

